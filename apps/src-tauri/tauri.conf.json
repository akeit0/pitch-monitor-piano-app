{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Piano App",
  "version": "0.0.4",
  "identifier": "com.antigravity.piano",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Piano App",
        "width": 1280,
        "height": 650,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/piano.ico"
    ]
  }
}
