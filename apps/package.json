{
	"name": "piano-app",
	"private": true,
	"version": "0.0.3",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"sync-version": "node -e \"const pkg=require('./package.json');const fs=require('fs');const tauriPath='./src-tauri/tauri.conf.json';const tauri=JSON.parse(fs.readFileSync(tauriPath,'utf8'));tauri.version=pkg.version;fs.writeFileSync(tauriPath,JSON.stringify(tauri,null,2)+'\\n');console.log('Synced version to',pkg.version);\"",
		"tauri": "npm run sync-version && tauri",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"build:github": "cross-env OUT_DIR=../docs BASE_PATH=/piano-app vite build",
		"release:patch": "node release.cjs patch",
		"release:minor": "node release.cjs minor",
		"release:major": "node release.cjs major"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tauri-apps/cli": "^2.9.6",
		"@types/webmidi": "^2.1.0",
		"cross-env": "^10.1.0",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"webaudiofont": "^3.0.4"
	}
}